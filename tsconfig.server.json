{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "outDir": "server-build",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": false,
        "noEmit": false,
        "strict": true
    },
    "include": [
        "server"
    ]
}
